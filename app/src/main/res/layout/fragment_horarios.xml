<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardElevation="10dp"
    tools:context=".fragments.HorariosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_turno"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/color_sec"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <include layout="@layout/dias_vertical"
                android:id="@+id/vertical_legend_schedules"/>

            <include
                android:id="@+id/aula_0"
                layout="@layout/column_schedules" />

            <include
                android:id="@+id/aula_1"
                layout="@layout/column_schedules" />

            <include
                android:id="@+id/aula_2"
                layout="@layout/column_schedules" />

            <include
                android:id="@+id/aula_3"
                layout="@layout/column_schedules" />

            <include
                android:id="@+id/aula_4"
                layout="@layout/column_schedules" />

            <include
                android:id="@+id/aula_5"
                layout="@layout/column_schedules" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
